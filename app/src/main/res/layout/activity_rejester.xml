<?xml version="1.0" encoding="utf-8"?>



<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/login_background"

    android:layout_height="match_parent"
    tools:context=".Activitys.Rejester"

    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#C6FFFFFF"
        />





    <LinearLayout
android:layout_width="match_parent"
android:weightSum="10"
android:orientation="vertical"
android:layout_height="match_parent"
android:paddingLeft="@dimen/_15sdp"
android:paddingRight="@dimen/_15sdp"
  >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        >


        <ImageView
            android:layout_centerInParent="true"
            android:src="@drawable/logo"
            android:layout_width="@dimen/_130sdp"
            android:layout_height="@dimen/_100sdp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:orientation="vertical"
        >
        <EditText
            android:id="@+id/userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="اسم المستخدم "
            android:inputType="textPersonName"
            android:gravity="right"
            android:fontFamily="@font/amiri_regular"
            android:backgroundTint="@color/textColorOfLogin"
            />
        <EditText
            android:id="@+id/email"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:hint="البريد الالكتروني "
            android:fontFamily="@font/amiri_regular"
            android:backgroundTint="@color/textColorOfLogin"
            android:inputType="textEmailAddress"
            />
        <EditText
            android:id="@+id/password"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="كلمه المرور  "
            android:gravity="right"
            android:fontFamily="@font/amiri_regular"
            android:backgroundTint="@color/textColorOfLogin"
            android:inputType="textPassword"
            />
        <EditText
            android:id="@+id/repassword"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="  تاكيد كلمه المرور"
            android:gravity="right"
            android:inputType="textPassword"
            android:fontFamily="@font/amiri_regular"
            android:backgroundTint="@color/textColorOfLogin"
            />

    </LinearLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <Button
     android:onClick="rejest"
        android:layout_centerHorizontal="true"
        android:background="@drawable/back_ground_of_login_btn"
        android:layout_width="@dimen/_200sdp"
        android:textColor="@color/white"
        android:text="انشاء حساب"
        android:textSize="@dimen/_14sdp"
        android:fontFamily="@font/amiri_regular"
        android:textStyle="bold"
        android:layout_height="@dimen/_40sdp" />
</RelativeLayout>






</LinearLayout>
</RelativeLayout>