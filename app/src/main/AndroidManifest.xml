<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.colleg.project.news">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".Activitys.AboutUs"></activity>
        <activity android:name=".Activitys.MediaActivity" />
        <activity
            android:name=".Activitys.Search"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/loogo" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/com_facebook_button_background_color_focused_disabled" />

        <activity
            android:name=".Activitys.Splash"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebookID" />

        <activity
            android:name=".Activitys.Rejester"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activitys.Login"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activitys.Details"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activitys.CategoryFilter"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activitys.Home"
            android:label="@string/title_activity_navigation_in_our_app"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBar" />
    </application>

</manifest>