<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:paddingLeft="@dimen/_5sdp"
    android:paddingRight="@dimen/_5sdp"

    android:layout_height="match_parent">

   <ImageView
       android:id="@+id/listviewFavPic"
       android:layout_width="match_parent"
       android:layout_height="@dimen/_110sdp"
       android:scaleType="fitXY"
       />

    <LinearLayout
        android:id="@+id/more_in_listview_fav"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:orientation="vertical"
        android:gravity="top"
        android:layout_alignParentRight="true"
        android:padding="@dimen/_2sdp"
        android:layout_margin="@dimen/_3sdp"
        >


        <ImageView

            android:id="@+id/unsave_in_listview"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_24sdp"

            android:src="@drawable/ic_cancel_black_24dp"
            />





    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_65sdp"
        android:layout_below="@id/listviewFavPic"
        android:orientation="vertical"
        android:background="#0D195A"
        >

    <TextView
        android:id="@+id/title_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:padding="@dimen/_8sdp"


        android:fontFamily="@font/amiri_regular"
        android:textColor="@color/white"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="@dimen/_10sdp" />



    </LinearLayout>
    <TextView
        android:id="@+id/subject_list_fav"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_18sdp"
        android:background="@drawable/textview_slider"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/_97sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:textColor="@color/Blue"
        />


</RelativeLayout>