<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:background="#EDFFFFFF"
    android:layout_margin="10dp"
    android:layout_marginBottom="5dp"
    android:layout_height="@dimen/_100sdp">


    <ImageView
        android:id="@+id/image_listview"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:src="@drawable/logo"
        android:scaleType="centerCrop"
        android:layout_alignParentRight="true"
        />

    <TextView
        android:id="@+id/text_listview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_toLeftOf="@id/image_listview"
        android:layout_margin="@dimen/_5sdp"
        android:padding="@dimen/_10sdp"
        android:fontFamily="@font/amiri_regular"
        android:text="@string/discrbtian"
        android:textSize="@dimen/_12sdp"
        android:textColor="@color/black"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/time_listview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="@dimen/_5sdp"
        android:text="2019 jun 7 09:12"
        android:fontFamily="@font/amiri_regular"
        android:textColor="#6A000000"
        android:textSize="@dimen/_10sdp"
        />



</RelativeLayout>